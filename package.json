{
	"dependencies": {
		"yargs": "*",
		"merge-stream": "*",
		"gulp": "*",
		"gulp-clean": "*",
		"gulp.spritesmith": "*",
		"gulp-task-listing": "*",
		"gulp-less": "*",
		"gulp-if": "*",
		"gulp-rename": "*",
		"gulp-browserify": "*",
		"gulp-uglify": "*",
		"gulp-jshint": "*",
		"jshint-stylish": "*",
		"liveify": "*",
		"gulp-livescript": "*",
		"LiveScript": "*"
	},
	"scripts": {
		"postinstall": "bash ./deploy.sh"
	},

	"gulp": {
		"distclean": [
			"./gulp",
			"./node_modules"
		],
		"sprites": {
			"icons": {
				"cssName": "icons.less",
				"cssDir": "./bitrix/templates/main/styles/src/sprites/",
				"imgDir": "./bitrix/templates/main/images/sprites/icons/",
				"imgPathPrefix": "/bitrix/templates/main/images/sprites/icons/",
				"algorithm": "binary-tree"
			}
		},
		"less": {
			"main": {
				"path": "./bitrix/templates/main/styles/",
				"mainSrc": "main.less",
				"buildFile": "build.css",
				"requiredSprites": [ "icons" ]
			}
		},
		"browserify": {
			"main": {
				"path": "./bitrix/templates/main/scripts/",
				"mainSrc": "main.js",
				"buildFile": "build.js",
				"jshintRelativeExclude": [
					"./libs/**/*.js"
				],
				"jshintParams": {
					"browser": true,
					"node": true,
					"undef": true,
					"indent": 1,
					"sub": false,
					"unused": true,
					"predef": [ "define" ]
				},
				"shim": {
					"jquery": {
						"relativePath": "./libs/jquery-2.1.1",
						"exports": ""
					},
					"jquery.easing": {
						"relativePath": "./libs/jquery.easing-1.3",
						"exports": ""
					},
					"jquery.colorbox": {
						"relativePath": "./libs/jquery.colorbox-1.5.13",
						"exports": ""
					},
					"modernizr": {
						"relativePath": "./libs/modernizr.custom.39986",
						"exports": "Modernizr"
					},
					"load_img": {
						"relativePath": "./wrappers/load_img",
						"exports": ""
					}
				}
			}
		}
	}
}
