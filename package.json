{
	"dependencies": {
		"yargs": "*",
		"gulp": "*",
		"gulp-clean": "*",
		"gulp.spritesmith": "*",
		"gulp-task-listing": "*",
		"gulp-less": "*",
		"gulp-if": "*",
		"gulp-rename": "*",
		"gulp-browserify": "*",
		"gulp-uglify": "*",
		"gulp-jshint": "*",
		"jshint-stylish": "*"
	},
	"scripts": {
		"postinstall": "bash ./deploy.sh"
	},

	"gulp": {
		"distclean": [
			"./gulp",
			"./node_modules"
		],
		"sprites": {
			"icons": {
				"css_name": "icons.less",
				"css_dir": "./bitrix/templates/main/styles/src/sprites/",
				"img_dir": "./bitrix/templates/main/images/sprites/icons/",
				"img_path_prefix": "/bitrix/templates/main/images/sprites/icons/",
				"algorithm": "binary-tree"
			}
		},
		"less": {
			"main": {
				"path": "./bitrix/templates/main/styles/",
				"main_src": "main.less",
				"build_file": "build.css",
				"required_sprites": [ "icons" ]
			}
		},
		"browserify": {
			"main": {
				"path": "./bitrix/templates/main/scripts/",
				"main_src": "main.js",
				"build_file": "build.js",
				"jshint_relative_exclude": [
					"./libs/**/*.js"
				],
				"jshint_params": {
					"browser": true,
					"node": true,
					"undef": true,
					"indent": 1,
					"sub": false,
					"unused": true
				},
				"shim": {
					"jquery": {
						"relative_path": "./libs/jquery-2.1.1",
						"exports": ""
					},
					"modernizr": {
						"relative_path": "./libs/modernizr.custom.39986",
						"exports": "Modernizr"
					}
				}
			}
		}
	}
}
